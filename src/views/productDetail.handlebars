<div class="row">
  <div class="col-md-6">
    <img src="{{#if product.thumbnails.[0]}}{{product.thumbnails.[0]}}{{else}}https://via.placeholder.com/600x400?text=Sin+Imagen{{/if}}" class="img-fluid rounded" alt="{{product.title}}" />
  </div>
  <div class="col-md-6">
    <h2>{{product.title}}</h2>
    {{#if error}}
      <div class="alert alert-danger">{{error}}</div>
    {{else}}
      <p>{{product.description}}</p>
      <p><strong>Código:</strong> {{product.code}}</p>
      <p><strong>Categoría:</strong> {{product.category}}</p>
      <p><strong>Precio:</strong> ${{product.price}}</p>
      <p><strong>Stock:</strong> {{product.stock}}</p>
      <div class="d-flex gap-2 mt-3">
        <button class="btn btn-primary" onclick="addToCart({{product.id}})">Agregar al carrito</button>
        <a class="btn btn-outline-secondary" href="/products">Volver al listado</a>
      </div>
    {{/if}}
  </div>
</div>